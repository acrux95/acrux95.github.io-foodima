Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif
Fuente3 = 'Questrial', Arial
Fuente4 = 'Pacifico', Arial
sizeTitle = 45px
color-primario = #333333
color-secundario = white

@media screen and (max-width: 767px)
    sizeTitle = 30px

.header--main 
    max-width: 90vw
    display: grid
    grid-template-columns: 30% 45% 25%
    margin: 40px 5% 40px;
    height: 90px
    justify-self: center
    .nav--title  
        grid-column: 1/2
        display: flex
        align-items: center
        h1
            margin-left: 0;
            font-family: Fuente3
            font-size: sizeTitle
            color: color-primario
            font-weight: bold
        
    
    .nav--header 
        grid-column: 2/3
        display: flex
        align-items: center
        justify-self: start
        ul 
            display: flex
            align-items: start
            padding-left: 0
            justify-content: space-around
            li 
                padding: 0 10px
                margin: 5px
                list-style: none
                display: flex
                align-items: flex-end
                justify-content: space-evenly
                
                a 
                    text-decoration: none
                    font-size: 15px
                    color: color-primario
                
                a:hover
                    font-weight: 800
    
    .nav--log--bar
        grid-column: 3/4
        margin: 20px 0
        display: flex
        justify-content: flex-end
        align-items: center
        
        .log--bar__number 
            height: 30px
            width: 30px
            background-color: color-primario
            border-radius: 50%
            display: flex
            justify-content: center
            align-items: center
            font-size: 18px
            text-decoration: none
            color: color-secundario
            
        
        .log--bar__login
            text-decoration: none
            font-size: 15px
            color: color-primario
            margin-left: 30px
        .log--bar__login:hover
            font-weight: 800
        
        button 
            height: 35px
            width: 100px
            border-radius: 20px
            background-color: color-primario
            margin-left: 30px
            a 
                text-decoration: none
                font-size: 15px
                color: color-secundario
            
        
    
