Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif
Fuente3 = 'Questrial', Arial
Fuente4 = 'Pacifico', Arial
color-primario = #333333
color-secundario = white

.header--main {
    display: grid
    grid-template-columns: 300px 1fr 300px
    margin-bottom: 20px
    height: 90px
    .nav--title { 
        grid-column: 1/2
        display: flex
        align-items: center
        h1{
            margin-left: 30px
            font-family: Fuente3
            font-size: 45px
            color: color-primario
            font-weight: bold
        }
    }
    .nav--header {
        grid-column: 2/3
        display: flex
        align-items: center
        justify-self: start
        ul {
            display: flex
            align-items: start
            padding-left: 0
            justify-content: space-around
            li {
                padding: 0 10px
                margin: 5px
                list-style: none
                display: flex
                align-items: flex-end
                justify-content: space-evenly
                
                a {
                    text-decoration: none
                    font-size: 15px
                    color: color-primario
                    }   
            }
        }
    }


    .nav--log--bar{
        grid-column: 3/4
        margin: 20px
        display: flex
        justify-content: space-around
        align-items: center
        .log--bar__number {
            height: 20px
            width: 20px
            background-color: color-primario
            border-radius: 50%
            display: flex
            justify-content: center
            font-size: 14px
            text-decoration: none
            color: color-secundario
        }
        .log--bar__login{
            text-decoration: none
            font-size: 15px
            color: color-primario
        }
        button {
            height: 35px
            width: 100px
            border-radius: 20px
            background-color: color-primario
            a {
                text-decoration: none
                font-size: 15px
                color: color-secundario
            }
        }
    }
}